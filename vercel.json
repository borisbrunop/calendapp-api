{ 
    "version": 2, 
    "builds": [
        {
          "src": "api/index.js",
          "use": "@vercel/node" 
        }
      ],
    "build": {
        "env": {
            "NODE_ENV": "production"
        },
        "scripts": {
            "build": "npm run build" 
        }
    },
    "rewrites": [
        { 
            "source": "/(.*)", 
            "destination": "/api" 
        }
    ] 
}